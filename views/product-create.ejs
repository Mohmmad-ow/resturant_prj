
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="/output.css">
	<title></title>
</head>
<style type="text/css">
	.bg1{
		background: #1e202c;
	}
	.bg2{
		background: #0BCA8D;
	}
	.bg3{
		background: #292b37;
	}
	.dot-pending{
		color: #f8ca30;
	}
	.dot-danger{
		color: #f8728a;
	}
	.dot-success{
		color: #0bcb90;
	}
	*{
		font-family: 'Arvo', serif;
	}
	/* Chrome, Safari, Edge, Opera */
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
	-webkit-appearance: none;
	margin: 0;
	}

/* Firefox */
	input[type=number] {
	appearance: textfield;
	}
</style>
<body>
	<div class="container-fluid p-0">
		<div class="row m-0">
			<%- include('partials/sidebar') %>

			<div class="p-0" style="height: 100vh;width: calc(100% - 320px)">
				<div class="p-3">
					<p class="float-left text-white font-weight-bold mb-0" style="font-size: 130%">Checkout</p>
					<div id="back-button" class="btn bg-white float-right">Back</div>
					<div style="clear: both;"></div>
				</div>
				
				
				<div style="height: calc(100vh - 120px);overflow-y: auto;">

					<div class="py-2 px-4 text-white bg2" style="width: 500px;margin: auto">
						<form  ref='uploadForm' 
                        id='uploadForm' 
                        action='/api/products/create' 
                        method='post' 
                        encType="multipart/form-data">
							<p class="text-center" style="font-size: 130%">Add Product</p>
							<label>Name</label>
							<input type="" class="form-control" name="name" style="background: none;color: white">
							<label class="mt-2">Price</label>
							<input type="" class="form-control" name="price" style="background: none;color: white">
							<label class="mt-2">Type</label>
							<select name="type"  class="form-control" id="exampleFormControlSelect1" style="background: none;">
								
								<% categories.forEach((category) => { %>
								<option><%= category.category%></option>
								<% }) %>
							</select>
							<label class="mt-2">Image</label><br>
							<input type="file" name="product_image">
							<button type="submit">Add Product</button>
						</form>
					</div>


					
				</div>
				
			</div>
		</div>
	</div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
